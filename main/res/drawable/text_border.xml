<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Bottom Shadow -->
    <item android:bottom="2dp"> <!-- Controls shadow's vertical position -->
        <shape android:shape="rectangle">
            <solid android:color="#80000000"/> <!-- Semi-transparent black shadow -->

        </shape>
    </item>

    <!-- Main Input Field -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/white"/> <!-- White background -->
            <stroke android:width="2dp" android:color="@color/white"/> <!-- White border -->

        </shape>
    </item>

</layer-list>